pipeline{
	agent any
	tools{
		maven "maven3.9.9"
	}
	environment{
	NVM_HOME = '${HOME}/.nvm/node/'
	}
	stages{
		stage("build"){
			steps{
				echo "${PATH} ${HOME} ${USER}"
			}
		}
		stage("Sonarqube analysis"){
			steps{
				echo "scanner $NVM_HOME"
			}
		}
		stage("deploy"){
			steps{
				echo "Deploying the apps"
			}
		}
	}
}